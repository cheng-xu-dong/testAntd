
server {
		listen       80;
		server_name  localhost;

		# 云餐厅v4.0-微食堂静态页
		location ~ ^/sovell-lachesis-static-microrestaurant/wap(((?!\.|\.|\.).)*)$ {
				try_files $uri http://${host}/sovell-lachesis-static-microrestaurant/wap/index.html;
		}
		
		# 云餐厅v4.0-微食堂静态页
		location ~ ^/sovell-lachesis-static-microrestaurant/web(((?!\.|\.|\.).)*)$ {
				try_files $uri http://${host}/sovell-lachesis-static-microrestaurant/web/index.html;
		}

		location ~ ^/sovell-lachesis-static-microrestaurant/wap {
				root   /var/www/html;
				index  index.html index.htm;
		}

		location ~ ^/sovell-lachesis-static-microrestaurant/web {
				root   /var/www/html;
				index  index.html index.htm;
		}

		error_page   500 502 503 504  /50x.html;
		location = /50x.html {
				root   /var/www/html;
		}
}
